<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAnswerVariant" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_variants</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ResultText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/rubik_regular</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="TextNumberVariant" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_variants</item>
        <item name="fontFamily">@font/nunito_semi_bold</item>
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ContainerVariants">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat">
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">68dp</item>
        <item name="android:layout_marginTop">96dp</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonBottom">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/nunito_bold</item>
        <item name="android:layout_width">311dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:layout_marginTop">12dp</item>
    </style>

</resources>